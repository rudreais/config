#include <stdlib.h>
#include <stdio.h>
#include "poke.h"
#include "my.h"

void swap(poke_t **pokemons, int first, int second)
{
	char *tmp1 = pokemons[first];
	char *tmp2 = pokemons[second];

	pokemons[first] = malloc (sizeof(char) * my_strlen(tmp2) + 1);
	pokemons[first] = my_strdup(tmp2);
	pokemons[second] = malloc (sizeof(char) * my_strlen(tmp1) + 1);
	pokemons[second] = my_strdup(tmp1);
}

void sort_pokemons(poke_t **pokemons, int n)
{
	int i;
	int j;

	for (i = 1; i < n; i++) {
		j = i;
		while ((j > 0) && (my_strcmp(pokemons->name[j], pokemons->name[j - 1]) < 0)) {
			swap(pokemons, j, j - 1);
			j = j - 1;
		}
	}
}

int main(int ac, char **av)
{
	pokes_t pokes;
	char *path = "pokecfg/";

	if (ac != 3)
		return (84);
	pokes.pokemons = malloc(sizeof(pokes) * 1);
	pokes.size = 0;
	parse(&pokes, path);
	return (0);
}
