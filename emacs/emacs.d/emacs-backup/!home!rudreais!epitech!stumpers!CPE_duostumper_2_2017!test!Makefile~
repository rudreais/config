SRC_DIR= 	$(realpath ../src)

SRC= 		$(SRC_DIR)/game.c	\
		$(SRC_DIR)/map.c	\
		$(SRC_DIR)/print.c	\
		$(SRC_UT_DIR)/stumper.c

SRC_UT_DIR=  	$(realpath .)

SRC_UT=		./tests.c

OBJ= 		$(SRC:.c=.o) $(SRC_UT:.c=.o)

CFLAGS= 	-Wall -Wextra --coverage -I ../include

LDFLAGS= 	-lcriterion -lgcov \
		-L../lib/my/ -lmy

NAME=	 	unittest

all:		$(NAME)

$(NAME):	$(OBJ)
		gcc -o $(NAME) $(OBJ) $(LDFLAGS)

clean:
		rm -f $(OBJ)

fclean:		clean
		rm -f $(NAME)

re:		fclean all
