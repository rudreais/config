#include <stdlib.h>
#include "my.h"

char *my_strjoin(char *str1, char *str2)
{
	int total_size = (my_strlen(str1) + my_strlen(str2));
	char *tmp = malloc (sizeof(char) * (total_size + 1));
	int i = 0;
	int j = 0;

	if (!tmp)
		return (NULL);
	while (str1[i]) {
		tmp[i] = str1[i];
		i++;
	}
	while (str2[j]) {
		tmp[i] = str2[j];
		i++;
		j++;
	}
	tmp[total_size] = '\0';
	if (!tmp)
		return (NULL);
	return (tmp);
}
