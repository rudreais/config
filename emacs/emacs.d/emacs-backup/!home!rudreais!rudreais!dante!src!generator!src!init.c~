#include <stdlib.h>
#include <stdbool.h>
#include "maze.h"
#include "my.h"

void init_maze(maze_t *maze, char **av)
{
	int x = my_atoi(av[1]);
	int y = my_atoi(av[2]);

	if (x < 1 || y < 1) {
		maze->success = false;
		return;
	}
	maze->rows = malloc(sizeof(row_t));
	maze->size = malloc(sizeof(size_t));
	maze->size->x = x;
	maze->size->y = y;
	maze->success = true;
}

void destroy_maze(maze_t *maze)
{
	for (int i = 0; i < maze->size->y; i++)
		free(maze->rows[i]->size_set);
	free(maze->rows);
	free(maze->rows);
	free(maze->size);
}
